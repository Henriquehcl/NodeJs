<div class="container">
    {{#each users}}
    
        <div class="item">
            <p>{{this.name}}</p>
            <div class="actions">
                <a href="/users/{{this.id}}" class="details-btn">Detalhes</a>
                <a href="/users/edit/{{this.id}}" class="details-btn">Editar</a>
                <form action="/users/delete/{{this.id}}" method="post">
                <input type="submit" value="Deletar" class="delete-btn">
                </form>
            </div>
        </div>
    
    {{/each}}
</div>